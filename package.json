{
  "name": "@darkobits/lolcatjs",
  "description": "Fork of https://github.com/robertboloc/lolcatjs.",
  "version": "3.1.0",
  "author": "darkobits",
  "license": "WTFPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkobits/lolcatjs.git"
  },
  "bin": {
    "lolcatjs": "dist/bin/cli.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "del dist",
    "check:styles": "tslint --project tsconfig.json --format codeFrame",
    "check:types": "tsc --emitDeclarationOnly",
    "prebuild": "run-s clean check:*",
    "build": "babel src --extensions '.ts,.tsx,.js,.jsx,.json' --ignore '**/*.spec.ts' --out-dir dist --verbose",
    "prebump": "npm run build",
    "bump": "standard-version",
    "bump:beta": "npm run prebump && standard-version --prerelease=beta",
    "link": "npm run build -- --out-dir=$(npx clean-link-dir)/dist --verbose --watch"
  },
  "dependencies": {
    "ansi": "^0.3.1",
    "async-lock": "^1.1.3",
    "chalk": "^2.1.0",
    "death": "^1.1.0",
    "ow": "^0.6.0",
    "p-stream": "^1.0.3",
    "split2": "^3.0.0",
    "strip-color": "^0.1.0",
    "through": "^2.3.8",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@darkobits/clean-link": "^2.0.1",
    "@types/async-lock": "^1.1.0",
    "@types/split2": "^2.1.6",
    "@types/through": "0.0.29",
    "@types/yargs": "^12.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "del-cli": "^1.1.0",
    "npm-run-all": "^4.1.3",
    "standard-version": "^4.4.0",
    "tslint": "^5.11.0",
    "tslint-xo": "^0.9.0",
    "typescript": "^3.0.3"
  }
}
